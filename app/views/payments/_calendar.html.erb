<div id="calendar">
  <div class="row-fluid">
    <div class="span6 title">
      <%= (Date.today + @current_year.year).year %>
    </div>
    <div class="span6 pag">
      <%= link_to export_year_path, class: 'btn btn-mini', target: '_blank' do %>
        <i class="icon-download"></i> Esporta
      <% end %>
      <%= link_to prev_year_path, remote: true, class: 'btn btn-mini' do %>
        <i class="icon-circle-arrow-left"></i> <%= (Date.today + (@current_year - 1).year).year %>
      <% end %>
      <%= link_to next_year_path, remote: true, class: 'btn btn-mini' do %>
        <%= (Date.today + (@current_year + 1).year).year %> <i class="icon-circle-arrow-right"></i>
      <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <table class="calendar">
        <% (1..12).step(3).each do |i| %>
          <tr>
            <% ((i)..(i+2)).each do |index| %>
              <%= render partial: 'payments/month', locals: { index: index } %>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>