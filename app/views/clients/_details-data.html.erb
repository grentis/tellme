<div class="client">
  <div class="row-fluid">
    <span class="span10 name"><%= client.name %></span>
    <span class="span2 expand"><a href="#" class="expand"><i class="icon-chevron-down"></i></a></span>
  </div>
  <div class="exp">
    <div class="row-fluid">
      <span class="span2">Indirizzo:</span>
      <span class="span10"><pre class="address"><%= client.address %></pre></span>
    </div>
    <div class="row-fluid">
      <span class="span3">IVA: <%= client.iva %></span>
      <span class="span3">Codice fiscale: <%= client.cf %></span>
    </div>
    <div class="row-fluid">
      <span class="span12">Tipo di pagamento: <%= client.payment_type %></span>
    </div>
    <div class="row-fluid">
      <span class="span1">Banca:</span>
      <span class="span11"><pre class="bank"><%= client.bank %></pre></span>
    </div>
    <div class="row-fluid">
      <span class="span2 abi">ABI: <%= client.abi %></span>
      <span class="span2 cab">CAB: <%= client.cab %></span>
      <span class="span5 offset3 hourly_cost">Costo orario: <%= write_currency client.hourly_cost %></span>
    </div>
    <div class="row-fluid">
      <span class="span12">
         <%= escape ? show_note(client.note).html_safe : show_note(client.note) %>
      </span>
    </div>
  </div>
</div>