var $invoice_details = $('#invoice-details');
if ($invoice_details.length <= 0) {
  $invoice_details = $('<div class="modal container" id="invoice-details"></div>').appendTo($('body'))
}
$invoice_details.html("<%= escape_javascript(render partial: 'details', locals: { invoice: @invoice }) %>").on('hidden', function(e) { $(this).remove(); } ).modal({
  width: '900px'
});