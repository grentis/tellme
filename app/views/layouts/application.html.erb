<!DOCTYPE html>
<html>
<head>
  <title>Tellme | Dashboard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page-container">
    <div class="container-fluid" style="position: relative">
      <div id="flash_hook"><%= show_flash %></div>
      <div class="navbar" style="margin-top:10px;">
        <div class="navbar-inner">
          <a class="brand" href="/">Tell Me</a>
          <%= form_tag filter_by_client_path, remote: true, class: 'navbar-form pull-left' do %>
            <%= select_tag :filter_client_id, ((render partial: 'clients/option', locals: { client: Client.new, filter: @client_filter }) + (render partial: 'clients/option', collection: Client.all, as: :client, locals: { filter: @client_filter })), data: { placeholder: 'filtra per cliente', onchange: filter_by_client_path } %>
            <%= link_to client_path(@client_filter || -1), remote: true, class: "filter-details btn btn-mini #{ @client_filter.blank? ? 'none' : '' }" do %>
              <i class="icon-eye-open" title="Dettagli"></i> dettagli
            <% end %>
          <% end %>
          <div class="pull-right">
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="icon-plus"></i> aggiungi
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'fattura', new_invoice_path, remote: true %>
                </li>
                <li>
                  <%= link_to 'cliente', new_client_path, remote: true %>
                </li>
              </ul>
            </div>
            <%= link_to logout_path, class: 'btn btn-inverse' do %>
              <i class="icon-leaf icon-white"></i> logout
            <% end %>
          </div>
        </div>
      </div>
      <%= yield %>
    </div>
  </div>
</body>
</html>