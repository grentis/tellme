<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <div class="row-fluid">
    <span class="span9">
      <h3>Dettaglio cliente</h3>
    </span>
    <span class="span3">
      <%= link_to edit_client_path(client), remote: true, class: 'btn btn-mini' do %>
        <i class="icon-pencil"></i> modifica
      <% end %>
    </span>
  </div>
</div>
<div class="modal-body">
  <div class="client">
    <div class="row-fluid">
      <span class="span10 name"><%= client.name %></span>
      <span class="span2 expand"><a href="#" class="expand"><i class="icon-chevron-down"></i></a></span>
    </div>
    <div class="exp">
      <div class="row-fluid">
        <span class="span1">Indirizzo:</span>
        <span class="span11"><pre class="address"><%= client.address %></pre></span>
      </div>
      <div class="row-fluid">
        <span class="span3">IVA: <%= client.iva %></span>
        <span class="span3">Codice fiscale: <%= client.cf %></span>
      </div>
      <div class="row-fluid">
        <span class="span12">Tipo di pagamento: <%= client.payment_type %></span>
      </div>
      <div class="row-fluid">
        <span class="span1">Banca:</span>
        <span class="span11"><pre class="bank"><%= client.bank %></pre></span>
      </div>
      <div class="row-fluid">
        <span class="span2 abi">ABI: <%= client.abi %></span>
        <span class="span2 cab">CAB: <%= client.cab %></span>
        <span class="span2 offset4 hourly_cost">Costo orario: <%= write_currency client.hourly_cost %></span>
      </div>
      <div class="row-fluid">
        <span class="span12">
          <pre class="note"><%= client.note %></pre>
        </span>
      </div>
    </div>
  </div>
  <ul class="invoices">
    <li>Fatture</li>
    <% client.invoices.each do |invoice| %>
      <li>
        <div class="row-fluid">
          <span class="span3">numero: <%= invoice.number %></span>
          <span class="span4">data: <%= invoice.date %></span>
          <span class="span3">totale: <%= write_currency invoice.amount %></span>
          <span class="span2 actions">
            <%= link_to edit_invoice_path(invoice), remote: true, class: 'btn btn-mini' do %>
              <i class="icon-pencil"></i> modifica
            <% end %>
          </span>
        </div>
        <div class="row-fluid">
          <span class="span12">
            <pre class="note"><%= invoice.note %></pre>
          </span>
        </div>
        <div class="row-fluid">
          <span class="span12">
            <ul class="list-payments">
              <% if (invoice.num_payments > 0) %>
                <% invoice.payments.each do |m| %>
                  <li>
                    <span class="label label-<%= m.paid? ? 'success' : m.expired? ? 'important' : 'nocolor'%> ">&nbsp;</span>
                    <%= m.v_date %> - <%= write_currency m.value %>
                  </li>
                <% end %>
              <% else %>
                <li>nessuna rata specificata</li>
              <% end %>
            </ul>
          </span>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div class="modal-footer">
  <%= link_to client_path(client), method: :delete, class: 'btn btn-danger pull-left', confirm: 'sei sicuro?' do %>
    <i class="icon-trash"></i> elimina cliente
  <% end %>
</div>