
Qui visualizzo quelli scaduti
<table class="table">
  <% @expired.each do |p| %>
    <tr>
      <td><%= p.client.name %></td>
      <td><%= p.invoice.number %></td>
      <td><%= p.invoice.date %></td>
      <td><%= p.value %></td>
    </tr>
  <% end %>
</table>



Elenco clienti
<table class="table">
  <% @clients.each do |c| %>
    <tr>
      <td><%= c.name %></td>
      <td><%= link_to 'Nuova fattura', new_client_invoice_path(c), remote: true  %></td>
      <td><%= link_to 'Modifica', edit_client_path(c), remote: true  %></td>
      <td><%= link_to 'Elimina', client_path(c), method: :delete %></td>
    </tr>
    <tr>
      <td colspan="3">
          <table>
            <% c.invoices.each do |i| %>
              <tr>
                <td><%= i.amount %></td>
                <td><%= i.date %></td>
                <td><%= link_to 'Modifica', edit_invoice_path(i), remote: true %></td>
                <td><%= link_to 'Elimina', invoice_path(i), method: :delete %></td>
              </tr>
            <% end %>
          </table>
      </td>
    </tr>
  <% end %>
</table>

